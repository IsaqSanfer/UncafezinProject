@model IEnumerable<UncafezinWeb.Entities.Product>

<div class="container">
    <div class="row mb-3">
        @Html.ActionLink("Cadastrar Produto", "CreateProduct", "", new { @class = "btn btn-lg btn-success w-25" })
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>#</th>
                <th>Produto</th>
                <th>Preço</th>
                <th>Link da imagem</th>
                <th>Descrição</th>
                <th class="text-center">Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                    <td><strong>@Html.DisplayFor(modelItem => item.Name)</strong></td>
                    <td class="text-nowrap">R$ @Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImgLink)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td class="text-nowrap">
                        @Html.ActionLink("Detalhes", "Details", new { id = item.ProductId }, new { @class = "btn btn-sm btn-outline-success mx-1" })
                        @Html.ActionLink("Editar", "Edit", new { id = item.ProductId }, new { @class = "btn btn-sm btn-info mx-1" })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.ProductId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
