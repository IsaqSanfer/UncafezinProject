@model IEnumerable<UncafezinWeb.Entities.Product>

<div class="container">
    <div class="row">
        @Html.ActionLink("Create New", "Create")
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>Produto</th>
                <th>Preço</th>
                <th>Link da imagem</th>
                <th>Descrição</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImgLink)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ProductId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.ProductId }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.ProductId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
