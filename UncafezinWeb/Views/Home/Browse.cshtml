@model UncafezinWeb.Entities.Category

@{
    ViewBag.Title = "Browse";
}

<div class="p-3 mb-4 mx-auto rounded bg-warning">
    <h2>@Model.Name</h2>
</div>


@if (User.IsInRole("Admin"))
{
    <div class="row">
        @Html.ActionLink("Cadastrar Produto", "Create", new { @class = "btn btn-info text-uppercase" })
    </div>
}

<div class="container mb-4">
    <div class="row">
        <div class="col-md-3 d-none d-md-block">
            @{Html.RenderAction("DeptMenu", "Home"); }
        </div>
        <div class="col-md-9 row g-4 row-cols-2 row-cols-md-3">
            @foreach (var item in Model.Products)
            {
                <div class="col">
                    <div class="card card-product">
                        <div class="card-body">
                            <div class="text-center position-relative">
                                <div class="position-absolute top-0 start-0">
                                    <span class="badge bg-info">Disponível</span>
                                </div>
                                <a href="@Url.Action("Details", new { id = item.ProductId })">
                                    <img width="220" class="mb-3 img-fluid" @*src="https://freshcart.codescandy.com/assets/images/products/product-img-1.jpg"*@ src="@item.ImgLink" alt="Imagem de @item.Name" />
                                </a>
                            </div>
                            <div class="text-small mb-1">
                                <small>@Html.ActionLink(item.Category.Name, "Browse", new { id = item.Category.CategoryId }, new { @class = "text-decoration-none text-muted" })</small>
                            </div>
                            <h2 class="fs-5">@Html.ActionLink(@item.Name, "Details", new { id = item.ProductId }, new { @class = "text-dark text-decoration-none" })</h2>
                            <div>
                                <small class="text-warning">
                                    <span class="bi bi-star-fill">&#9733;</span>
                                    <span class="bi bi-star-fill">&#9733;</span>
                                    <span class="bi bi-star-fill">&#9733;</span>
                                    <span class="bi bi-star-fill">&#9733;</span>
                                    <span class="bi bi-star-fill">&#9733;</span>
                                </small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <span class="text-dark">R$ @item.Price</span>
                                    <span class="text-decoration-line-through text-muted">@(item.Price + 3.89M)</span>
                                </div>
                                <div>
                                    @Html.ActionLink("Comprar", "AddToCart", "ShoppingCart", new { id = item.ProductId }, new { @class = "btn btn-sm btn-success" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
