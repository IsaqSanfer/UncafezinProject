@model IEnumerable<UncafezinWeb.Entities.Category>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!-- Carrossel Home -->
<div class="row">
    <div class="col">

        <div id="carouselHome" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselHome" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner rounded overflow-hidden" style="max-height:500px">
                <div class="carousel-item active">
                    <img src="~/Content/Images/coffee-wall-lg.jpeg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/Images/alfajor-wall-lg.jpeg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/Images/croissant-wall-lg.jpeg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/Images/granos-cafe-md.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselHome" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselHome" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

<div class="container my-4">
    <div class="row">
        <main aria-labelledby="title" class="text-center p-3 mb-3 mx-auto rounded bg-warning">
            <h2 id="title">Departamentos</h2>
        </main>
    </div>
    <div class="row g-4 row-cols-3 row-cols-md-4 row-cols-lg-5">
        <div class="col" style="height:350px">
            <a href="#" class="card card-product h-100"
               style="background: url(./Content/Images/banner-deal.jpg) no-repeat; background-size: cover; background-position-y: bottom; height: 100%">
            </a>
        </div>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col" style="height:350px">
                    <div class="card card-product h-100">
                        <div class="card-body d-flex align-items-end flex-wrap align-content-end justify-content-center">
                            <div class="text-center position-relative">
                                <a href="@Url.Action("Browse", new { id = item.CategoryId })">
                                    <img width="220" class="mb-3 img-fluid" src="~/Content/Images/placeholder.gif" alt="Imagem de @item.Name" />
                                </a>
                            </div>
                            <h2 class="fs-5">@Html.ActionLink(@item.Name, "Browse", new { id = item.CategoryId }, new { @class = "text-dark text-decoration-none" })</h2>
                            <div class="text-small mb-1">
                                <small class="text-decoration-none text-muted">@item.Description</small>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <div>
                                    @Html.ActionLink("Editar", "Edit", "Dashboard", new { id = item.CategoryId }, new { @class = "btn btn-info" }) |
                                    @*@Html.ActionLink("Detalhes", "Details", new { id = item.CategoryId }) |*@
                                    @Html.ActionLink("Excluir", "Delete", "Dashboard", new { id = item.CategoryId }, new { @class = "btn btn-danger" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-sm">
                <div class="card shadow-lg" style="width: 18rem;">
                    <img class="card-img-top img-fluid bg-secondary" src="~/Content/Images/itens/large_002.jpg" alt="Imagem de capa do card" height="200" />
                    <div class="card-body">
                        <h5 class="card-title">Espresso com Chantilly</h5>
                        <p class="card-text">Café puro e feito sob pressão com uma cobertura de chantilly.</p>
                        <br />
                        <p class="card-text">R$ 9,90</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Product" asp-route-id="02">Comprar</a>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card shadow-lg" style="width: 18rem;">
                    <img class="card-img-top img-fluid bg-secondary" src="~/Content/Images/itens/large_004.jpg" alt="Imagem de capa do card" height="200" />
                    <div class="card-body">
                        <h5 class="card-title">Cappuccino</h5>
                        <p class="card-text">Café espresso com leite vaporizado, resultando em um creme bem consistente.</p>
                        <p class="card-text">R$ 12,90</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Product" asp-route-id="04">Comprar</a>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card shadow-lg" style="width: 18rem;">
                    <img class="card-img-top img-fluid bg-secondary" src="~/Content/Images/itens/large_009.jpg" alt="Imagem de capa do card" height="200" />
                    <div class="card-body" style="height:230px;">
                        <h5 class="card-title">Chá verde com gengibre e limão</h5>
                        <p>&nbsp;</p>
                        <p class="card-text">R$ 7,90</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Product" asp-route-id="09">Comprar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<div class="container my-4">
    <div class="row">
        <main aria-labelledby="title" class="text-center p-3 mb-3 mx-auto rounded bg-danger">
            <h2 id="title">Mais Vendidos</h2>
        </main>
    </div>
    <div class="row">
        @{Html.RenderAction("DeptProduct", "Home"); }
    </div>
</div>