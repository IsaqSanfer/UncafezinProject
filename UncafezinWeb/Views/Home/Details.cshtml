@model UncafezinWeb.Entities.Product

@{
    ViewBag.Title = Model.Name;
}

<section class="mb-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="tns-outer" id="product-ow">
                    <img width="600" class="rounded w-100 h-auto bg-secondary-subtle" src="@Html.DisplayFor(model => model.ImgLink)" alt="Imagem de @Model.Name" />
                </div>
                <div class="position-relative">
                    <div class="row my-3 text-center g-3">
                        <div class="col-3">
                            <div class="img-thumbnail rounded">
                                <img width="145" class="img-fluid" src="@Html.DisplayFor(model => model.ImgLink)" alt="Imagem de @Model.Name" />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="img-thumbnail rounded">
                                <img width="145" class="img-fluid" src="@Html.DisplayFor(model => model.ImgLink)" alt="Imagem de @Model.Name" />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="img-thumbnail rounded">
                                <img width="145" class="img-fluid" src="@Html.DisplayFor(model => model.ImgLink)" alt="Imagem de @Model.Name" />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="img-thumbnail rounded">
                                <img width="145" class="img-fluid" src="@Html.DisplayFor(model => model.ImgLink)" alt="Imagem de @Model.Name" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="ps-lg-10 mt-6 mt-md-0">
                    @Html.ActionLink(Model.Category.Name, "Browse", new { id = Model.Category.CategoryId }, new { @class = "mb-4 text-muted" })
                    <h1 class="mb-1">@Model.Name</h1>
                    <div class="mb-4">
                        <small class="text-warning">
                            <span class="bi bi-star-fill">&#9733;</span>
                            <span class="bi bi-star-fill">&#9733;</span>
                            <span class="bi bi-star-fill">&#9733;</span>
                            <span class="bi bi-star-fill">&#9733;</span>
                            <span class="bi bi-star-fill">&#9733;</span>
                        </small>
                        <small class="text-success">(30 reviews)</small>
                    </div>
                    <div class="fs-4">
                        <span class="text-dark">R$ @Model.Price</span>
                        <span class="text-decoration-line-through text-muted">R$ @(Model.Price + 3.89M)</span>

                        <hr class="my-6">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                    <hr class="my-6">

                    <div class="btn-group mb-5" role="group" aria-label="Variações de tamanho do item">
                        <input type="radio" class="btn-check" name="cupSize" id="cupSize1" autocomplete="off" checked />
                        <label class="btn btn-outline-secondary" for="cupSize1">250ml</label>

                        <input type="radio" class="btn-check" name="cupSize" id="cupSize2" autocomplete="off" />
                        <label class="btn btn-outline-secondary" for="cupSize2">400ml</label>

                        <input type="radio" class="btn-check" name="cupSize" id="cupSize3" autocomplete="off" />
                        <label class="btn btn-outline-secondary" for="cupSize3">500ml</label>
                    </div>
                    <div class="d-flex flex-row justify-content-start g-2 align-items-center">
                        <div class="input-group input-spinner">
                            <input type="button" value="-" class="button-minus btn btn-sm" data-field="quantity" disabled />
                            <input type="number" step="1" max="10" value="1" name="quantity" class="quantity-field form-control-sm form-input" style="width:5rem" disabled />
                            <input type="button" value="+" class="button-plus btn btn-sm" data-field="quantity" disabled />
                        </div>
                        <div class="d-flex align-items-center col-5 col-lg-4">
                            @Html.ActionLink("Comprar", "AddToCart", "ShoppingCart", new { id = Model.ProductId }, new { @class = "btn btn-lg btn-success" })
                            @if (User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Editar", "Edit", "Dashboard", new { id = Model.ProductId }, new { @class = "btn btn-sm btn-info mx-2" })
                                @Html.ActionLink("Excluir", "Delete", "Dashboard", new { id = Model.ProductId }, new { @class = "btn btn-sm btn-danger" })
                            }
                        </div>
                    </div>
                    <hr class="my-6">
                    <div>
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <td>Código do Produto:</td>
                                    <td>FBB00255</td>
                                </tr>
                                <tr>
                                    <td>Disponibilidade:</td>
                                    <td>Em Estoque</td>
                                </tr>
                                <tr>
                                    <td>Entrega:</td>
                                    <td>
                                        <small>
                                            Mesmo dia.
                                            <small class="text-muted">(Todas as entregas feitas em até 2 horas)</small>
                                        </small>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>