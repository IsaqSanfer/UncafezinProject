@model UncafezinWeb.Models.UserRoleViewModel

@{
    ViewBag.Title = "CreateUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
@using (Html.BeginForm("UserRole", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(m => m.UserId)
        @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Name", "Name"), "Role...", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}

@if (Model.RolesUser != null)
{
    <br />
    <hr />
    <h4>Roles</h4>
    <table class="table">

        <thead>
            <tr>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RolesUser)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item)
                    </td>
                    <td>
                        @Html.ActionLink("Remove Role", "DeleteRoleUser", new { userId = Model.UserId, roleName = item }, new { @onclick = "return confirm('Tem certeza que deseja excluir esta role?')" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("Users","Account")">Voltar</a>