@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav navbar-right">
            <li class="nav-item">
                @Html.ActionLink("Olá " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Content("~/Dashboard/")"><span class="material-symbols-outlined">settings</span></a>
                </li>
            }

            <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()"><span class="material-symbols-outlined">logout</span></a></li>
        </ul>
    }
}
else
{
<ul class="navbar-nav navbar-right gap-2">
    <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-sm btn-warning" })</li>
    <li>@Html.ActionLink("Registre-se", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-sm btn-outline-warning" })</li>
</ul>
}
