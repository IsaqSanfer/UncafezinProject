@using UncafezinWeb.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<style type="text/css">
    footer {
        display: none !important
    }
</style>

<main class="form-signin text-center w-100 m-auto rounded shadow-lg" style=" max-width: 330px; padding: 1rem;" aria-labelledby="title">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <img width="72" height="57" class="mb-4 mx-auto" src="~/Content/Images/placeholder.gif" alt="logo" />
            <h4>Use uma conta local para fazer o login</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-floating">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                @Html.LabelFor(m => m.Email, new { @class = "form-label", placeholder = "name@example.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-check text-start my-3">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", type = "checkbox" })
                @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
            </div>
            <button type="submit" class="btn btn-lg btn-warning w-75 mx-auto">Login</button>
            <hr />
            @Html.ActionLink("Novo por aqui? Crie uma conta.", "Register", new { @class = "w-100" })
            <p class="my-5 text-body-secondary">&copy; @DateTime.Now.Year - Uncafezin</p>
        }
    </section>
</main>

<div class="container d-none">
    <div class="col-md-6 text-end float-end">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })

            @* Habilite quando a confirmação da conta estiver ativada para a funcionalidade de redefinição de senha
                <p>@Html.ActionLink("Esqueceu sua senha?", "ForgotPassword")</p>*@
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}