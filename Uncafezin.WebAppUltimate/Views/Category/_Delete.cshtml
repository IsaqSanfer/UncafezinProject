<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title fs-5" id="DeleteCategoryModalLabel">Deseja excluir a categoria "@Html.DisplayFor(model => model.CategoryName)"?</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="form-group mb-3">
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CategoryName)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group d-inline-flex w-100 justify-content-end">
            <form asp-action="_Delete">
                <input type="hidden" asp-for="CategoryId" />
                <input type="button" value="Cancelar" class="btn btn-secondary mx-2" data-bs-dismiss="modal" />
                <input type="submit" value="Excluir Categoria" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>