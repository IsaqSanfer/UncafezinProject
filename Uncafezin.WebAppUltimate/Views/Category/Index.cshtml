@model IEnumerable<Uncafezin.WebAppUltimate.Models.CategoryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container my-2">
    <input type="button" class="btn btn-lg btn-success" value="+ Nova Categoria" data-bs-toggle="modal" data-bs-target="#CreateCategoryModal" />

    <table class="table table-striped table-hover col-12 col-lg-6 my-2">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>
                        <input type="button" class="btn btn-sm btn-info" value="Detalhes" data-bs-toggle="modal" data-bs-target="#DetailsCategoryModal" asp-route-id="@item.CategoryId" /> |

                        <input type="button" class="btn btn-sm btn-secondary" value="Editar" data-bs-toggle="modal" data-bs-target="#EditCategoryModal" asp-route-id="@item.CategoryId" /> |

                        <input type="button" class="btn btn-sm btn-danger" value="Excluir" data-bs-toggle="modal" data-bs-target="#DeleteCategoryModal" asp-route-id="@item.CategoryId" />
                        @* <a asp-action="_Details" asp-route-id="@item.CategoryId">Details</a> | <a asp-action="_Delete" asp-route-id="@item.CategoryId">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="CreateCategoryModal" tabindex="-1" aria-labelledby="CreateCategoryModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @await Html.PartialAsync("_Create")
        </div>
    </div>
</div>

<div class="modal fade" id="DetailsCategoryModal" tabindex="-1" aria-labelledby="DetailsCategoryModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @await Html.PartialAsync("_Details")
        </div>
    </div>
</div>

<div class="modal fade" id="EditCategoryModal" tabindex="-1" aria-labelledby="EditCategoryModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @await Html.PartialAsync("_Edit")
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteCategoryModal" tabindex="-1" aria-labelledby="DeleteCategoryModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @await Html.PartialAsync("_Delete")
        </div>
    </div>
</div>