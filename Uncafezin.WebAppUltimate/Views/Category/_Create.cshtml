@model Uncafezin.WebAppUltimate.Models.CategoryViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title fs-5" id="CreateCategoryModalLabel">Criar nova Categoria</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form asp-action="Create">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-group d-inline-flex w-100 justify-content-end">
                <input type="button" value="Cancelar" class="btn btn-secondary mx-2" data-bs-dismiss="modal" />
                <input type="submit" value="Criar Nova Categoria" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
